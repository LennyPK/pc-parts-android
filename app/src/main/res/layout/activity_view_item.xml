<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView style="@style/CategoryCard">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:id="@+id/view_item_title"
                    style="@style/MainActivityHeader"
                    android:gravity="center"
                    android:text="Title"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CategoryCard"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/item_imagecard"
                style="@style/ItemImageCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <ImageView
                    android:id="@+id/view_item_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_gpu" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView style="@style/CategoryCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/view_item_price"
                    style="@style/MainActivityHeader"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:text="$999.99"/>

                <TextView
                    style="@style/MainActivityHeader"
                    android:fontFamily="@font/roboto_medium"
                    android:text="inc GST"
                    android:textColor="#803BE0"
                    android:textSize="19dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView style="@style/CategoryCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <TextView
                    style="@style/MainActivityHeader"
                    android:id="@+id/view_item_category_description"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Description"
                    android:textSize="16dp"
                    android:gravity="left"
                    android:layout_marginRight="24dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    style="@style/MainActivityHeader"
                    android:id="@+id/view_item_description"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Description"
                    android:textSize="16dp"
                    android:gravity="right"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>